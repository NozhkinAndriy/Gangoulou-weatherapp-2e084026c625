<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MapFragment">
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:text="Demo Button"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"/>!-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.google.android.gms.maps.MapView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:padding="4dp">

            <Button
                android:id="@+id/return_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_return"
                android:drawableLeft="@drawable/ic_return"
                android:drawablePadding="@dimen/elements_base_margin"
                android:text="@string/return_to_main_button"
                android:textColor="@color/colorNormal" />

            <Button
                android:id="@+id/get_weather_info_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/ic_map_pin"
                android:drawableLeft="@drawable/ic_map_pin"
                android:drawablePadding="@dimen/elements_base_margin"
                android:text="@string/get_weather_from_map_marker"
                android:textColor="@color/colorNormal" />

        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>